<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/card_shadow_bg"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vijay S"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
            
        <TextView
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address here"
            android:textColor="#83000000"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>
            
        <TextView
            android:id="@+id/area_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area, City"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
            
        <TextView
            android:id="@+id/mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile: 1234567890"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Edit Address" />

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/xmark"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Delete Address" />
    </LinearLayout>
</LinearLayout>
