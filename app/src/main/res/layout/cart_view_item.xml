<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:elevation="6dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="12dp">

            <!-- Product Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"

                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/cartProductImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <!-- Product Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/cartProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/cartProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="â‚¹999"
                    android:textSize="15sp"
                    android:textColor="#FF5722" />
                <!-- Details toggle -->
                <LinearLayout
                    android:id="@+id/detailsToggle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:background="@drawable/card_shadow_bg">

                    <TextView
                        android:id="@+id/detailsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View details"
                        android:textSize="13sp"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/detailsExpandIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <!-- Collapsible details container -->
                <LinearLayout
                    android:id="@+id/detailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="6dp"
                    android:padding="8dp"
                    android:background="@drawable/card_shadow_bg">

                    <TextView
                        android:id="@+id/cartProductOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decreaseQuantity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/minus"
                        android:padding="6dp" />

                    <TextView
                        android:id="@+id/quantityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="1"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/increaseQuantity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/plus"
                        android:padding="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Delete Button -->
            <ImageView
                android:id="@+id/cartDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:padding="5dp"
                android:src="@drawable/xmark"

                android:contentDescription="Delete" />
            <ImageView
                android:id="@+id/cartEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:padding="5dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
